<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_step_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/recipe_step_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="at.breitenfellner.bakingapp.view.RecipeStepFragment">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/recipe_step_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:resize_mode="fixed_width" />

        <ImageView
            android:id="@+id/recipe_step_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recipe_step_title"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true"
            tools:text="Baking the pie" />

        <TextView
            android:id="@+id/recipe_step_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/FontRegular"
            tools:text="Some more complex instruction on how to bake the pie ..." />

    </LinearLayout>
</ScrollView>
